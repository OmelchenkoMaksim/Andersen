<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".Switzerland">

    <TextView
        android:id="@+id/title_switzerland"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_huge"
        android:layout_marginTop="@dimen/spacing_huge"
        android:layout_marginEnd="@dimen/spacing_huge"
        android:text="@string/title_switzerland"
        android:textSize="@dimen/title_size"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/red"
        android:layout_width="82.5dp"
        android:layout_height="200dp"
        android:layout_marginStart="@dimen/spacing_huge"
        android:layout_marginTop="200dp"
        android:background="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/white"
        android:layout_width="45dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/red_8"
        app:layout_constraintStart_toEndOf="@+id/red_3"
        app:layout_constraintTop_toBottomOf="@+id/red2" />

    <View
        android:id="@+id/white_01"
        android:layout_width="135dp"
        android:layout_height="45dp"
        android:background="@color/white"
        app:layout_constraintStart_toEndOf="@+id/red"
        app:layout_constraintTop_toBottomOf="@+id/red_3" />

    <View
        android:id="@+id/red2"
        android:layout_width="217.5dp"
        android:layout_height="32.5dp"
        android:layout_marginTop="200dp"
        android:background="@color/red"
        app:layout_constraintStart_toEndOf="@+id/red"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/red_3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@color/red"
        app:layout_constraintStart_toEndOf="@+id/red"
        app:layout_constraintTop_toBottomOf="@+id/red2" />

    <View
        android:id="@+id/red_4"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@color/red"
        app:layout_constraintEnd_toStartOf="@+id/white"
        app:layout_constraintStart_toEndOf="@+id/red"
        app:layout_constraintTop_toBottomOf="@+id/white_01" />

    <View
        android:id="@+id/red_5"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@color/red"
        app:layout_constraintStart_toEndOf="@+id/white"
        app:layout_constraintTop_toBottomOf="@+id/white_01" />

    <View
        android:id="@+id/red_7"
        android:layout_width="82.5dp"
        android:layout_height="0dp"
        android:background="@color/red"
        app:layout_constraintBottom_toTopOf="@+id/red_8"
        app:layout_constraintStart_toEndOf="@+id/white_01"
        app:layout_constraintTop_toBottomOf="@+id/red2" />

    <View
        android:id="@+id/red_8"
        android:layout_width="217.5dp"
        android:layout_height="32.5dp"
        android:background="@color/red"
        app:layout_constraintStart_toEndOf="@+id/red"
        app:layout_constraintTop_toBottomOf="@+id/red_4" />

    <View
        android:id="@+id/red_6"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@color/red"
        app:layout_constraintBottom_toTopOf="@+id/white_01"
        app:layout_constraintEnd_toStartOf="@+id/red_7"
        app:layout_constraintStart_toEndOf="@+id/white"
        app:layout_constraintTop_toBottomOf="@+id/red2" />

    <Button
        android:id="@+id/button_to_next_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_huge"
        android:layout_marginBottom="@dimen/spacing_huge"
        android:backgroundTint="@color/black"
        android:text="@string/next_country"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>