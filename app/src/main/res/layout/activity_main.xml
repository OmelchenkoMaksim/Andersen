<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A33333"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_weight="1"
        android:backgroundTint="@color/black"
        android:backgroundTintMode="screen"
        android:text="@string/button_toast"
        android:textColor="@color/white"
        android:visibility="visible" />

    <TextView
        android:id="@+id/show_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:background="#FFFF00"
        android:gravity="center"
        android:text="@string/show_count_string"
        android:textAlignment="center"
        android:textColor="#A1887F"
        android:textSize="120sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_count"
        style="@style/Platform.MaterialComponents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="@color/purple_200"
        android:text="@string/button_count_string"
        android:textColor="@color/black"
        android:textSize="@dimen/big_text" />

    <Button
        android:id="@+id/button_to_two_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_regular"
        android:layout_weight="1"
        android:backgroundTint="@color/black"
        android:gravity="center|end"
        android:text="@string/to_zero_activity" />

    <TextView
        android:id="@+id/textRelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:text="@string/LinearLayout" />

</LinearLayout>