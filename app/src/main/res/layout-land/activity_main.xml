<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#D500F9"
        android:backgroundTintMode="screen"
        android:text="@string/button_toast"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:visibility="visible" />


    <TextView
        android:id="@+id/show_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_toast"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#FFFF00"
        android:gravity="center"
        android:text="@string/show_count_string"
        android:textAlignment="center"
        android:textColor="#A1887F"
        android:textSize="60sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_count"
        style="@style/Platform.MaterialComponents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_count"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginTop="@dimen/spacing_normal"
        android:layout_marginEnd="@dimen/spacing_normal"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="@string/button_count_string"
        android:textColor="@color/white"
        android:textSize="@dimen/text_normal"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_to_two_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_count"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/spacing_small"
        android:backgroundTint="@color/black"
        android:text="@string/to_zero_activity"
        android:textSize="@dimen/small_text" />

    <TextView
        android:id="@+id/textRelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:text="@string/relativelayout" />

</RelativeLayout>