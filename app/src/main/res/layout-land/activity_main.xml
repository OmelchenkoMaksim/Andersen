<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    android:orientation="vertical">


    <Button
        android:id="@+id/button_toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#D500F9"
        android:backgroundTintMode="screen"
        android:onClick="showToast"
        android:text="@string/button_toast"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:visibility="visible"
        tools:ignore="UsingOnClickInXml" />


    <TextView
        android:id="@+id/show_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_toast"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#FFFF00"
        android:gravity="center"
        android:text="@string/show_count_string"
        android:textAlignment="center"
        android:textColor="#A1887F"
        android:textSize="60sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_count"
        style="@style/Platform.MaterialComponents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_count"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:onClick="countUp"
        android:text="@string/button_count_string"
        android:textColor="#FFEA00"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:ignore="UsingOnClickInXml" />

    <Button
        android:id="@+id/button_to_next_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_count"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:backgroundTint="@color/black"
        android:onClick="toZeroActivity"
        android:text="@string/to_zero_activity"
        android:textSize="10sp"
        tools:ignore="SmallSp,UsingOnClickInXml" />

    <TextView
        android:id="@+id/textRelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:text="@string/relativelayout" />

</RelativeLayout>